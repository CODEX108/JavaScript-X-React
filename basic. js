 function sum (n1,n2){
  return n1+n2;   
 }

function calculateFoodTotal(food, tip) {
  const tipPercentage = tip/100;
  const tipAmont = food * tipPercentage;
  const total = sum(food , tipPercentage);
  return total;
}

console.log(calculateFoodTotal(2000,5))



