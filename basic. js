}

function sayMyName (name){
  
  /*Template literals provide an easy way 
  to incorporate variables into strings.
  Interpolitian is an efficient way of 
  concatenation
  template literals ``
  */
  greet = `hi {name},Noce to meet you!`
  console.log(greet)
  console.log('Namaste!')
}

//calling a function
sayMyName('Jonny Depp')

